#!/bin/bash

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

echo "Adding scripts directory to PATH: $SCRIPT_DIR"
echo "Setting CP_TOOL_ROOT to: $PROJECT_ROOT"

echo "" >> ~/.bashrc
echo "# Added by cp_tools setup script" >> ~/.bashrc
echo "export CP_TOOL_ROOT=\"$PROJECT_ROOT\"" >> ~/.bashrc
echo "export PATH=\"\$PATH:$SCRIPT_DIR\"" >> ~/.bashrc

echo "" >> ~/.zshrc
echo "# Added by cp_tools setup script" >> ~/.zshrc
echo "export CP_TOOL_ROOT=\"$PROJECT_ROOT\"" >> ~/.zshrc
echo "export PATH=\"\$PATH:$SCRIPT_DIR\"" >> ~/.zshrc

echo "Please restart your shell for changes to take effect"
