#!/bin/bash

# Set the path to the scripts directory
SCRIPT_DIR="$(dirname "$0")/../src/cp_tool/core"

# Get the command from the first argument
COMMAND=$1

# Remove the first argument and keep the rest
shift

# Map commands to their respective Python scripts
case "$COMMAND" in
    "dl")
        python3 "$SCRIPT_DIR/downloader.py" "$@"
        ;;
    "run")
        python3 "$SCRIPT_DIR/runner.py" "$@"
        ;;
    "test")
        python3 "$SCRIPT_DIR/tester.py" "$@"
        ;;
    *)
        echo "Unknown command: $COMMAND"
        echo "Usage: cptool <command> [args]"
        echo "Commands:"
        echo "  dl    - Download test cases"
        echo "  run   - Run solution"
        echo "  test  - Test solution"
        exit 1
        ;;
esac

# Preserve the exit code from the Python script
exit $?
